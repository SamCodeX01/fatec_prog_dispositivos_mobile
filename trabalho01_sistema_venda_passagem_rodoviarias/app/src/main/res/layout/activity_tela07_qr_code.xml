<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tela_07_QrCode">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comprovante de Viagem"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Substituímos o QR Code por um código textual -->
            <TextView
                android:id="@+id/tvCodigoReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CÓDIGO DE RESERVA"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#F5F5F5"
                android:padding="20dp"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvInformacoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"
                android:lineSpacingExtra="4dp" />

            <Button
                android:id="@+id/btnSalvarPDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalizar Reserva"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>