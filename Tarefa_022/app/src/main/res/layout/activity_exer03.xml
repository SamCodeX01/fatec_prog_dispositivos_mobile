<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btAvancar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exer_03">

    <EditText
        android:id="@+id/edPeso"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Digite a qtd de números:"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btAvancar4"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="37dp"
        android:width="80dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Avançar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btVoltar4"
        app:layout_constraintTop_toBottomOf="@+id/tvMostrarNumerosGerados" />

    <Button
        android:id="@+id/btVoltar4"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginTop="37dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Voltar"
        app:layout_constraintEnd_toStartOf="@+id/btAvancar4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMostrarNumerosGerados" />

    <TextView
        android:id="@+id/tvMostrarNumerosGerados"
        android:layout_width="220dp"
        android:layout_height="148dp"
        android:layout_marginTop="49dp"
        android:background="#C4ACED"
        android:foregroundGravity="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLimpar4" />

    <Button
        android:id="@+id/btLimpar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Limpar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btCalcular"
        app:layout_constraintTop_toBottomOf="@+id/edPeso" />

    <Button
        android:id="@+id/btCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Gerar Números"
        app:layout_constraintEnd_toStartOf="@+id/btLimpar4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edPeso" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="56dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Exercício 03: Gerador de Números Aleatórios"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>